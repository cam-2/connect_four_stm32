#ifndef INC_GAMELOGIC_H_
#define INC_GAMELOGIC_H_

#include "LCD_Driver.h"
#include "InterruptControl.h"
#include "Button_Driver.h"
#include <string.h>

#define AI_MODE_SELECT 1
#define TWO_PLAYER_SELECT 2
#define NO_MODE_SELECTED 0

#define CONNECT_FOUR_ROW_COUNT 6
#define CONNECT_FOUR_COLUMN_COUNT 7

#define COIN_DEFAULT_X 3
#define COIN_GAME_LOGIC_OFFSET 1
#define COIN_DEFAULT_Y 40

#define YELLOW 1
#define RED 2

#define FALSE 0
#define TRUE 1

typedef struct {
	uint8_t col;
	uint8_t row;
	uint16_t yPos;
} coin_t;

void setGameMode(uint8_t mode);
void resetBoard(void);
void startNewGame(void);
void playGame(void);
void playTurn(void);
void incrementWinCount(void);
uint8_t checkWinner(uint8_t row, uint8_t col, uint8_t player);
uint8_t getScoreByDirection(uint8_t row, uint8_t col, uint8_t rowDelta, uint8_t colDelta, uint8_t player);

void resetCoinPos(void);
void placeCoin(void);
void checkIfUserMovedCoin(void);
void moveCoin(uint8_t col);
uint8_t canPlaceCoin(uint8_t col);

/* Alpha-beta search functions for AI logic. */
uint8_t getScoreOfPosition(uint8_t row, uint8_t col, uint8_t player);
uint8_t checkWinByScore(uint8_t score);

#endif /* INC_GAMELOGIC_H_ */
